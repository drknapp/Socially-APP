<ScrollView
    android:id="@+id/layBack"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
    	android:orientation="vertical">
        
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Title row -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    	<TextView
        	android:text="About"
        	android:textSize="28sp"
        	android:textStyle="bold"
        	android:textColor="#0094FF"
        	android:gravity="center"
        	android:layout_gravity="center"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:padding="4dp"
        	android:layout_margin="8dp"
        	/>
    
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Tagline row -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Socially connects people. With Socially, you can meet new people. This app aims to help people socialize and build new relationships."
        	android:textSize="16sp"
        	android:textColor="#252525"
        	android:gravity="center" 
		    android:layout_gravity="center" 
        	android:layout_marginLeft="16dp"
        	android:layout_marginRight="16dp"/>
    
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Info row -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    	<ImageView
    	    android:layout_width="96dp"
    	    android:layout_height="96dp"
    	    android:layout_gravity="center"
    	    android:src="@drawable/icon"
    	    android:layout_marginBottom="8dp"
    	    android:layout_marginTop="600dp" />
    	
    	<TextView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:layout_gravity="center"
        	android:text="Designed and programmed by:"
        	android:textSize="12sp"
        	android:textColor="#252525"/>
    
    	<TextView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:layout_gravity="center"
        	android:text="Ali Sadeq"
        	android:textSize="12sp"
        	android:textColor="#252525"/>
    
    	<TextView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:layout_gravity="center"
        	android:text="Dustin Knapp"
        	android:textSize="12sp"
        	android:textColor="#252525"
        	android:layout_marginBottom="12dp"/>
    	
    	<TextView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:layout_gravity="center"
        	android:text="Version: 0.4.0"
        	android:textSize="12sp"
        	android:textColor="#252525"
        	android:layout_marginBottom="12dp"/>
    
	</LinearLayout>
</ScrollView>