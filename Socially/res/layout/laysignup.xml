<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Title row -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <TextView
        android:id="@+id/tv1"
        android:text="Sign Up"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#006FBF"
        android:gravity="center"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="8dp"
        />
    
   	 <View
    android:layout_width="fill_parent"
    android:layout_height="6dp"
    android:background="#0094FF" />
    
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Enter Name Row -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal"
    	>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Full name:"
            android:textColor="#006FBF"
            android:textSize="16sp"
            android:textStyle="bold" />

    	<EditText
        	android:id="@+id/etName"
        	android:background="#0094FF"
        	android:textSize="16sp"
        	android:textColor="#FFFFFF"
        	android:layout_width="match_parent"
        	android:layout_height="30dp"
        	android:gravity="center"
        	android:padding="4dp"
        	android:layout_margin="8dp"
        	android:ems="10"
        	android:inputType="textPersonName" >
        	<requestFocus />
    		</EditText>
    
    </LinearLayout>
    
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Date Of Birth Row -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal"
    	android:weightSum="3"
    	>
    	<TextView
        	android:id="@+id/tv3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_margin="8dp"
        	android:gravity="center"
        	android:padding="4dp"
        	android:text="Date of birth:"
        	android:textColor="#006FBF"
        	android:textSize="16sp"
        	android:textStyle="bold" />

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Spinners for DOB -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

  
    	    <Spinner
    	        android:id="@+id/spMonth"
    	        android:layout_width="16dp"
    	        android:gravity="center"
    	        android:layout_weight="1"
    	        android:background="#0094FF"
    	        android:textColor="#000000"
    	        android:layout_height="30dp" />

    	    <Spinner
    	        android:id="@+id/spDay"
    	        android:layout_width="16dp"
    	        android:gravity="center"
    	        android:layout_weight="1"
    	        android:background="#0094FF"
    	        android:textColor="#006FBF"
    	        android:layout_height="30dp"/>

    	    <Spinner
    	        android:id="@+id/spYear"
    	        android:layout_width="16dp"
    	        android:layout_height="30dp"
    	        android:layout_weight="0.88"
    	        android:background="#0094FF"
    	        android:gravity="center"
    	        android:textColor="#006FBF" />
    	
    	</LinearLayout>
    	
	
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!--  Enter email Row -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal"
    	>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Enter E-Mail:"
            android:textColor="#006FBF"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        
        <EditText
        	android:id="@+id/etEmail"
        	android:background="#0094FF"
        	android:textSize="16sp"
        	android:textColor="#FFFFFF"
        	android:layout_width="match_parent"
        	android:layout_height="30dp"
        	android:gravity="center"
        	android:padding="4dp"
        	android:layout_margin="8dp"
        	android:ems="10"
        	android:inputType="textEmailAddress" >
        	<requestFocus />
    		</EditText>
    		
    </LinearLayout>
    
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Enter Password Row  -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal"
    	>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Enter a Password:"
            android:textColor="#006FBF"
            android:textSize="16sp"
            android:textStyle="bold" />

    	<EditText
        	android:id="@+id/etPassword"
        	android:background="#0094FF"
        	android:textSize="16sp"
        	android:textColor="#FFFFFF"
        	android:layout_width="match_parent"
        	android:layout_height="30dp"
        	android:gravity="center"
        	android:padding="4dp"
        	android:layout_margin="8dp"
        	android:ems="10"
        	android:inputType="textPassword" >
        	<requestFocus />
    		</EditText>
    
    </LinearLayout>
    
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Confirm Passowrd Row -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal"
    	>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Confirm Password:"
            android:textColor="#006FBF"
            android:textSize="16sp"
            android:textStyle="bold" />

    	<EditText
        	android:id="@+id/etPassConf"
        	android:background="#0094FF"
        	android:textSize="16sp"
        	android:textColor="#FFFFFF"
        	android:layout_width="match_parent"
        	android:layout_height="30dp"
        	android:gravity="center"
        	android:padding="4dp"
        	android:layout_margin="8dp"
        	android:ems="10"
        	android:inputType="textPassword" >
        	<requestFocus />
    		</EditText>
    
    </LinearLayout>

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Imageview, App launcher icon  -->
    <!-- imageview is clickable to confirm save data -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

	  	
	<ImageView
	    android:id="@+id/iv1"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingStart="10dp"
	    android:paddingEnd="10dp"
	    android:layout_width="100dp"
    	android:layout_height="100dp"
	    android:clickable="true"
	    android:layout_gravity="center_horizontal"
	    android:src="@drawable/ic_launcher" />
	
	  
	  
	<Button
	android:id="@+id/btn1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="#0094FF"
    android:textSize="25dp"
    android:layout_weight="1"
    android:textColor="#FFFFFF"
    android:text="Register" />
	
</LinearLayout>
